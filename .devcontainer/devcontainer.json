{
  "name": "STUDENT-TEST Platform Workspace",

  "build": {
    "dockerfile": "./Dockerfile.platform",
    "context": "."
  },

  "remoteUser": "z2h",

  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "editor.formatOnSave": true
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "runArgs": [
    "--privileged",
    "--network=host"
  ],

  "forwardPorts": [8080, 6443, 8888],

  "postCreateCommand": "echo 'Platform image cargada correctamente.'"
}
